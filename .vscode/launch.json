{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch index.html",
            "file": "${workspaceFolder}/index.html",
            "env":{"DISABLE_PROXY":"true"}
        },    
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}","address": "localhost",
            "env":{"DISABLE_PROXY":"true"}
        }
       
    ]
  }
